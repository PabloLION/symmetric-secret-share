{
  "$id": "sss.schema.json@latest",
  "$schema": "http://json-schema.org/schema",
  "description": "Schema for symmetric_secrete_share config file",
  "title": "symmetric_secrete_share_schema",
  "type": "object",
  "$defs": {
    "file": {
      "properties": {
        "source": {
          "default": "https://raw.githubusercontent.com/PabloLION/symmetric-secrete-share/main/tests/example.env",
          "description": "URL of the source file",
          "type": "string"
        },
        "target": {
          "default": "./target.txt",
          "description": "Relative(to the folder of config file) path to the target file",
          "type": "string"
        }
      },
      "required": [
        "source",
        "target"
      ]
    }
  },
  "properties": {
    "config_id": {
      "description": "The config id",
      "type": "string"
    },
    "files": {
      "description": "List of files to encrypt",
      "items": {
        "$ref": "#/$defs/file",
        "minLength": 1
      },
      "type": "array"
    },
    "key_identifier": {
      "description": "The key identifier for the symmetric secret share",
      "type": "string"
    },
    "last_key_rotation": {
      "default": 0,
      "description": "Last key rotation time",
      "type": "integer"
    },
    "sss_version": {
      "description": "Version of symmetric_secrete_share",
      "enum": [
        "0.0.5"
      ],
      "type": "string"
    }
  },
  "required": [
    "files",
    "key_identifier",
    "last_key_rotation",
    "sss_version",
    "config_id"
  ]
}